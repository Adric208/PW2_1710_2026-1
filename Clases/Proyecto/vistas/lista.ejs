<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Lista</title>
    <link rel="stylesheet" href="/css/estilos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>

<body>

<div class="container mt-4">

    <h2 class="text-center mb-4">Lista de usuarios</h2>

    <!-- BOTÓN SALIR -->
    <div class="d-flex justify-content-end mb-3">
        <a href="/logout" class="btn btn-danger">Salir</a>
    </div>

    <!-- FORMULARIO AGREGAR -->
    <form action="/agregar" method="POST" class="card p-3 mb-4">
        <h4>Agregar registro</h4>

        <div class="row">

            <div class="col">
                <label>ID</label>
                <input type="number" name="id" min="0" class="form-control" required>
            </div>

            <div class="col">
                <label>Nombre</label>
                <input type="text" name="nombre" class="form-control" required>
            </div>

            <div class="col">
                <label>Ocupación</label>
                <input type="text" name="ocupacion" class="form-control" required>
            </div>

            <div class="col">
                <label>Edad</label>
                <input type="number" name="edad" min="0" class="form-control" required>
            </div>

            <div class="col">
                <label>Promedio</label>
                <!-- AQUI VIENE EL CAMBIO -->
                <input type="number" name="promedio" step="0.01" min="0" max="10" class="form-control" required>
            </div>

            <div class="col d-flex align-items-end">
                <button class="btn btn-primary w-100">Agregar</button>
            </div>

        </div>

    </form>

    <!-- TABLA -->
    <table class="table table-bordered" id="tablaLista">

        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Ocupación</th>
                <th>Edad</th>
                <th>Promedio</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
        <% registros.forEach(r => { %>
            <tr data-id="<%= r.id %>">

                <td class="campo"><%= r.id %></td>
                <td class="campo"><%= r.nombre %></td>
                <td class="campo"><%= r.ocupacion %></td>
                <td class="campo"><%= r.edad %></td>
                <td class="campo"><%= r.promedio %></td>

                <td class="acciones">
                    <button class="btn btn-warning btn-sm" onclick="editarFila(<%= r.id %>)">Editar</button>
                    <button class="btn btn-danger btn-sm" onclick="eliminarFila(<%= r.id %>)">Eliminar</button>
                </td>

            </tr>
        <% }) %>
        </tbody>

    </table>

</div>

<script src="/js/lista.js"></script>

</body>
</html>
